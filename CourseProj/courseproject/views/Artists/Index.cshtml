@model IEnumerable<Michaels_Stuff.Models.Artist>

@{
    ViewBag.Title = "Arists";
}

<h2>Artists</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOnSeen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstOnSeen)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArtistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArtistId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArtistId })
        </td>
    </tr>
}

</table>


<div id="speakers-container">
    @foreach (var artist in Model)
    {
        <div>@Html.ActionLink(artist.FirstName + " " + artist.LastName, "Details", new { id = artist.ArtistId })</div>
        <div style="margin-left:5px;">
            @Html.Action("_MediaReleases", "MediaReleases", new { artistID = artist.ArtistId })
        </div>
    }
</div>

<script>
    $(function () { $("#speakers-container").accordion(); });

</script>
